<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Help">

    <ImageView
        android:id="@+id/imgview_faithlogo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/faithcolleges"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

    <TextView
        android:id="@+id/bscs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BSCS-3A"
        android:textStyle="bold"
        android:textSize="48dp"
        app:layout_constraintTop_toBottomOf="@id/imgview_faithlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textPresented"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by"
        android:textStyle="italic"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/bscs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloud Neo Bagtas"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textPresented"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/angelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angelo Castillo"
        android:textSize="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cloud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/jester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jester Ray Cruz"
        android:textSize="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/angelo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/drawerHelpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_menu_24"
        android:background="@color/white"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>